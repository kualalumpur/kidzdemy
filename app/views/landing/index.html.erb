<div class="landing">
  <div class="container-fluid">

    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="3000">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="item active">
          <%= image_tag("slide1.jpg") %>
          <div class="carousel-caption">
            <h3>Caption Text</h3>
            <p>The atmosphere in New York is lorem ipsum.</p>
          </div>
        </div>
        <div class="item">
          <%= image_tag("slide2.jpg") %>
          <div class="carousel-caption">
            <h3>Caption Text</h3>
            <p>The atmosphere in New York is lorem ipsum.</p>
          </div>
        </div>
        <div class="item">
          <%= image_tag("slide3.jpg") %>
          <div class="carousel-caption">
            <h3>Caption Text</h3>
            <p>The atmosphere in New York is lorem ipsum.</p>
          </div>
        </div>
      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </a>
      <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
      </a>
    </div> <!-- Carousel -->

    <hr>
  </div>


  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <%= form_tag(categories_path, method: "get", id: "search-form", class: "center-align center-block") do %>
        <div class="input-group input-group-lg">
          <%= search_field_tag :search, params[:search], placeholder: "Search for events...", class: "form-control SearchBar" %>
          <span class="input-group-btn">
            <button class="btn btn-default SearchButton" type="button">
              <span class=" glyphicon glyphicon-search SearchIcon" ></span>
            </button>
          </span>
        </div>
        <% end %>
      </div>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->


  <!-- Title -->
  <section id="portfolio">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Events for you</h2>
        <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
      </div>
    </div>
    <!-- /.row -->

    <!-- Page Features -->
    <div class="row">

      <% @events.each do |event| %>
      <div class="col-md-4 col-sm-6">
        <div class="thumbnail">
          <% if event.image? %>
          <%= image_tag event.image, size: '800x300', class: "img-settings img-responsive center-block" %>
          <% else %>
          <%= image_tag "800x300.png", size: '800x300', class: "img-settings img-responsive center-block" %>
          <% end %>

          <div class="caption">
            <h5 style= "line-height: 40%; color: #757575"><%= event.start.strftime '%a, %b %d, %Y, %I:%M %P' %></h5>
            <h4 style= "font-family: Montserrat"><%= link_to event.title, event_path(event), class: "title-link" %></h4>
            <p><%= event.address %></p>

            <p>
            <%= link_to 'Get Ticket', tickets_path(event_id: event.id), class:"btn btn-primary" %>
            <%= link_to 'More Info', event_path(event), class:"btn btn-primary" %>
            </p>
          </div>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</section>



  <!-- Portfolio Grid Section -->
  <section id="portfolio" class="bg-light-gray">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading">Category</h2>
          <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
      </div>

      <div class="row">
        <% @categories.each do |category| %>
        <div class="col-md-4 col-sm-6 portfolio-item">
          <%= link_to category_path(category), class: "portfolio-link" do %>
          <div class="portfolio-hover">
            <div class="portfolio-hover-content">
              <i class="fa fa-code fa-3x"></i>
            </div>
          </div>
          <%= image_tag(category.image, class: 'img-responsive') %>
          <% end %>
          <div class="portfolio-caption">
            <h4><%= link_to category.name, category_path(category) %></h4>
            <p class="text-muted"><%= category.description %></p>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
