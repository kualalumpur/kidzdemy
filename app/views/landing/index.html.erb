          </div>
        </div>
      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </a>
      <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
      </a>
    </div> <!-- Carousel -->

    <hr>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="input-group input-group-lg">
          <input type="text" class="form-control SearchBar" placeholder="Search for...">
          <span class="input-group-btn">
            <button class="btn btn-defaul SearchButton" type="button">
              <span class=" glyphicon glyphicon-search SearchIcon" ></span>
            </button>
          </span>
        </div>
      </div>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->


  <!-- Title -->
  <section id="portfolio">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Events for you</h2>
        <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
      </div>
    </div>
    <!-- /.row -->

    <!-- Page Features -->
    <div class="row">

      <% @events.each do |event| %>
      <div class="col-md-4 col-sm-6">
        <div class="thumbnail">
          <% if event.image? %>
          <%= image_tag event.image, size: '800x300', class: "img-settings img-responsive center-block" %>
          <% else %>
          <%= image_tag "800x300.png", size: '800x300', class: "img-settings img-responsive center-block" %>
          <% end %>
          <div class="caption">

            <h5 style= "line-height: 40%; color: #757575"><%= event.start.strftime '%Y-%m-%d %H:%M:%S' %></h5>
            <h4 style="font-family: Montserrat"><%= link_to event.title, event_path(event), class: "title-link" %></h4>
            <p><%= event.address %></p>

            <p>
            <%= link_to 'Get Ticket', new_ticket_path(event), class:"btn btn-primary" %>
            <%= link_to 'More Info', event_path(event), class:"btn btn-primary" %>
            </p>
          </div>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</section>

