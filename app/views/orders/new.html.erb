
<%= form_for(@order, url: orders_path, html: { id: "order-create-form" }) do |f| %>
<h1 class="text-center">
  Register
</h1>


<%= f.hidden_field :ticket_id, value: @ticket.id %>

<div class="form-group">
  <h4> <%= f.label :text_field, "Name" %> </h4>
  <%= f.text_field :name, required: true, id: "order_name_field", class: 'form-control' %>
</div>

<div class="form-group text-center">
  <%= f.submit "Checkout", class: "btn btn-success btn-lg" %>
</div>

<% end %>
