<div class= "event">

  <div class="container">
    <div class="row">
      <div class="col-xs-12 well">

        <%= form_for(@event, url: events_path, html: { id: "event-create-form" }) do |f| %>
        <h1 class="text-center">
          Create New Event
        </h1>

        <div class="form-group">
          <h4> <%= f.label :text_field, "Event Titles" %></h4>
          <%= f.text_field :title, required: true, maxlength: "50", id: "event_title_field", class: 'form-control' %>
          <small class="text-muted">Short and distinct name (50 characters max)</small>
        </div>

        <div class="form-group">
          <h4> <%= f.label :text_field, "Location" %> </h4>
          <%= f.text_field :venue, required: true, id: "event_venue_field", class: 'form-control' %>
          <small class="text-muted">Your venue</small>
        </div>

        <div class="form-group">
          <h4> <%= f.label :text_field, "Starts" %> </h4>
          <!-- <%= f.text_field :start, 'data-behaviour' => 'datepicker', required: true, id: "event_start_field" %><br /> -->
          <%= f.datetime_select :start, 'data-behaviour' => 'datepicker', required: true, id: "event_start_field", class: 'form-control' %>
        </div>

        <div class="form-group">
          <h4> <%= f.label :text_field, "Ends" %> </h4>
          <%= f.datetime_select :end, required: true, id: "event_end_field", class: 'form-control' %>
        </div>

        <div class="form-group">
          <h4 class="text-center"> Event Image </h4>
          <div id="preview-image">
            <%= image_tag "graybox.jpg", class: "img-settings img-responsive center-block" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.file_field :image, id: "event_image_field", class: 'form-control image-uploader' %>
          <small class="text-muted">We recommend using at least a 800x300px image that's no larger than 5MB. </small>
        </div>

        <div class="form-group">
          <h4> <%= f.label :text_area, "Description" %> </h4>
          <%= f.text_area :description, required: true, rows: 10, id: "event_description_field", class: 'form-control' %>
        </div>

        <div class="form-group">
          <h4> <%= f.label :text_field, "Event Category" %> </h4>
          <%= f.collection_select :category_id, @categories, :id, :name, include_blank: false %>
        </div>

        <div class="form-group">
          <h4> <%= f.label :text_field, "Organizer Name" %> </h4>
          <%= f.text_field :organizer_name, id: "event_organizer_name_field", class: 'form-control' %>
        </div>

        <div class="form-group">
          <h4> <%= f.label :text_area, "Organizer Description" %> </h4>
          <%= f.text_area :organizer_description, rows: 5, id: "event_organizer_description_field", class: 'form-control' %>
        </div>

        <div class="form-group text-center">
          <%= link_to "Cancel", :back, {:class=>"btn btn-primary"} %>
          <%= f.submit "Create Event", class: "btn btn-primary" %>
        </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
