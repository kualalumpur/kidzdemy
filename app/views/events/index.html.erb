<h1>Events</h1>

<% @events.each do |event| %>
  <div class="event">
    <h3><%= link_to event.title, event_path(event) %></h3>
    <h5><%= event.description %></h5>
    <h5><%= event.datetime %></h5>
    <h5><%= event.venue %></h5>
    <h4 class="text-center"> Event Image </h4>
    <div id="preview-image">
      <% if event.image? %>
      <%= image_tag event.image, size: '260x180', class: "img-settings img-responsive center-block" %>
      <% else %>
      <%= image_tag "lego_robotics.jpeg", size: '260x180', class: "img-settings img-responsive center-block" %>
      <% end %>
    </div>
    <h5><%= event.etype %></h5>
    <h5><%= event.ticket_limit %></h5>
    <h5><%= event.user_id %></h5>
  </div>
<% end %>
